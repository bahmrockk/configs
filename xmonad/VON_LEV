scratchpads = [
       NS "htop" (myTerminal ++ " -name htop -e htop") (title =? "htop") bigFloating
     , NS "notes" "gvim --role notes ~/Documents/notes" (role =? "notes") smallFloating
     , NS "journalctl" (myTerminal ++ " -title journalctl -e zsh -c 'sudo journalctl -n100 -fal | ccze -A'") (title =? "journalctl") bigFloating
     , NS "ncmpcpp" (myTerminal ++ " -title ncmpcpp -e zsh -c 'ncmpcpp'") (title =? "ncmpcpp") bigFloating
 ]
  where
    role = stringProperty "WM_WINDOW_ROLE"
    smallFloating = (customFloating $ W.RationalRect (1/4) (1/3) (5/10) (4/10))
    bigFloating = (customFloating $ W.RationalRect (1/6) (1/6) (2/3) (2/3))


